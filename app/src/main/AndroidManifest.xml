<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartQuiz"
        tools:targetApi="31" >
        <activity android:name="com.example.smartquiz.ui.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.example.smartquiz.ui.QuizActivity"/>
        <activity android:name="com.example.smartquiz.ui.ResultActivity"/>
        <activity android:name="com.example.smartquiz.ui.PerformanceActivity"/>
        <activity android:name="com.example.smartquiz.ui.SubjectsActivity"/>
        <activity android:name="com.example.smartquiz.ui.SubjectDetailActivity"/>
        <activity android:name="com.example.smartquiz.ui.QuizHistoryActivity"/>
        <activity android:name="com.example.smartquiz.ui.SettingsActivity"/>
    </application>

</manifest>